<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColoredRatingBar">
        <attr name="indicator" format="boolean" />
        <attr name="rating" format="float" />
        <attr name="type" format="enum">
            <enum name="normal" value="0" />
            <enum name="small" value="1" />
        </attr>
        <attr name="coloredRatingBarStyle" format="reference" />
        <!-- Indicator RatingBar style. -->
        <attr name="coloredRatingBarStyleIndicator" format="reference" />
        <!-- Small RatingBar style. -->
        <attr name="coloredRatingBarStyleSmall" format="reference" />
        <!-- Small indicator RatingBar style. -->
        <attr name="coloredRatingBarStyleSmallIndicator" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="civ_border" format="boolean"/>
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_shadow" format="boolean"/>
        <attr name="civ_shadow_color" format="color"/>
        <attr name="civ_shadow_radius" format="float"/>
    </declare-styleable>


    <declare-styleable name="password_edit_text">

        <attr name="show_drawable" format="integer"/>
        <attr name="hide_drawable" format="integer"/>
        <attr name="password_visible" format="boolean"/>
        <attr name="show_as_text" format="boolean"/>
        <attr name="hide_text" format="string"/>
        <attr name="show_text" format="string"/>
    </declare-styleable>



    <declare-styleable name="CircleProgressBar">
        <attr name="mlpb_inner_radius" format="dimension" />
        <attr name="mlpb_background_color" format="color" />
        <attr name="mlpb_progress_color" format="color" />
        <attr name="mlpb_progress_stoke_width" format="dimension" />
        <attr name="mlpb_show_arrow" format="boolean" />
        <attr name="mlpb_enable_circle_background" format="boolean" />
        <attr name="mlpb_arrow_width" format="dimension" />
        <attr name="mlpb_arrow_height" format="dimension" />

        <attr name="mlpb_progress" format="integer" />
        <attr name="mlpb_max" format="integer" />

        <attr name="mlpb_progress_text_size" format="dimension" />
        <attr name="mlpb_progress_text_color" format="color" />

        <!--<attr name="mlpb_progress_text_offset" format="dimension"/>-->

        <attr name="mlpb_progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>



    <declare-styleable name="chip_layout">
        <attr name="textSize_" format="dimension"/>
        <attr name="chipPadding_" format="dimension"/>
        <attr name="chipPaddingLeft_" format="dimension"/>
        <attr name="chipPaddingRight_" format="dimension"/>
        <attr name="chipPaddingTop_" format="dimension"/>
        <attr name="chipPaddingBottom_" format="dimension"/>
        <attr name="chipTextPadding_" format="dimension"/>
        <attr name="chipTextPaddingLeft_" format="dimension"/>
        <attr name="chipTextPaddingRight_" format="dimension"/>
        <attr name="chipTextPaddingTop_" format="dimension"/>
        <attr name="chipTextPaddingBottom_" format="dimension"/>
        <attr name="textColor_" format="color" />
        <attr name="chipColor_" format="color" />
        <attr name="showText_" format="boolean" />
        <attr name="hint_" format="string" />
        <attr name="showDeleteButton_" format="boolean" />
        <attr name="deleteIcon_" format="reference" />
        <attr name="chipDrawable_" format="reference" />
        <attr name="chipLayoutDrawable_" format="reference" />
        <attr name="labelPosition_" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="chipLayout">
        <attr name="android:gravity" />
    </declare-styleable>
    <declare-styleable name="chipLayout_Layout">
        <attr name="android:layout_gravity" />
    </declare-styleable>

    <declare-styleable name="MaterialSearchView">
        <attr name="searchBackground" format="integer" />
        <attr name="searchVoiceIcon" format="integer" />
        <attr name="searchCloseIcon" format="integer" />
        <attr name="searchBackIcon" format="integer" />
        <attr name="searchSuggestionBackground" format="integer" />
        <attr name="android:hint" />
        <attr name="android:textColor" />
        <attr name="android:textColorHint" />
    </declare-styleable>


</resources>